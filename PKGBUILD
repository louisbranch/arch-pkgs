  'rxvt-unicode'  # terminal emulator
  'task'          # cmd line to-do list
  'terminus-font' # fixed width font
  'tmux'          # terminal multiplexer
  'vim-minimal'   # vim without GUI
  'yaourt'        # AUR packages instaler
)
